pipeline {
    //agent any
     agent {
                dockerContainer{
                    image 'jenkins/inbound-agent:latest-jdk21'
                }
            }
    stages {
        stage('VM Build') {
            steps {
                sh """
                    echo Building VM APP
                    java --version
                    pwd
                """
            } //EO steps
        } // EO stage VM Build
        stage('Maven Build') {
            agent {
                dockerContainer{
                    image 'maven'
                }
            }
            steps {
                sh """
                    echo Building Maven APP
                    mvn --version
                """
            } //EO steps
        } // EO stage Maven Build
        stage('Node Build') {
            agent {
                dockerContainer{
                    image 'node'
                }
            }
            steps {
                sh """
                    echo Building Node APP
                    node --version
                    pwd
                """
            } //EO steps
        } // EO stage Node Build
        stage('Python Build') {
            agent {
                dockerContainer{
                    image 'python'
                }
            }
            steps {
                sh """
                    echo Building Maven APP
                    python --version
                """
            } //EO steps
        } // EO stage Python Build
    }// EO stages
}// EO pipeline

